{
  "name": "web",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The base role for systems that serve HTTP traffic",
  "default_attributes": {
    "user":{
      "name": "www-data"
    },
    "nginx":{
      "default_site_enabled": false,
      "user": "www-data",
      "group": "www-data"
    },
    "services":{
      "hhvm": [ "enable", "start" ]
    }
  },
  "run_list": [
    "recipe[nginx::source]",
    "recipe[hhvm]",
    "recipe[services]"
  ]
}
